[Global]
xsec_path = /Users/ahmed/Documents/taurex_files/taurex_cobweb/Input/xsec/TauRex_sampled_xsecs_R10000_0.3-15
cia_path = /Users/ahmed/Documents/taurex_files/taurex_cobweb/Input/cia/hitran


[Chemistry]
chemistry_type = taurex
fill_gases = H2,He
ratio = 4.8962e-2

    [[H2O]]
    gas_type=twolayer

    [[CH4]]
    gas_type=twolayer

    [[N2]]
    gas_type=constant
    mix_ratio=1e-7


[Temperature]
profile_type = Guillot
T_irr = 1500.0


[Pressure]
profile_type = Simple
atm_min_pressure = 1e-4
atm_max_pressure = 1e6
nlayers = 100

[Planet]
planet_mass = 1.0 
planet_radius = 1.0

[Star]
star_type = blackbody
#star_type = phoenix
#phoenix_path = /Users/ahmed/Downloads/BT-Settl_M-0.0a+0.0
#temperature = 5800

[Model]
model_type = emission
ngauss = 2

    [[Absorption]]
    [[CIA]]
    cia_pairs = H2-He,H2-H2
    [[Rayleigh]]


[Binning]
bin_type = manual
log_wavenumber_grid = 700,25000,1000



[Optimizer]
optimizer = multinest
num_live_points = 100
max_iterations = 1000
resume=False
verbose_output=True
multi_nest_path = ../multinest



[Fitting]
T:fit = True
T:bounds = 1200.0,1600.0
log_H2O:fit = True
log_H2O:bounds = -2,-5

