[Global]
xsec_path = /Users/ahmed/Documents/taurex_files/taurex_cobweb/Input/xsec/TauRex_sampled_xsecs_R10000_0.3-15
cia_path = /Users/ahmed/Documents/taurex_files/taurex_cobweb/Input/cia/hitran


[Gas]
profile_type = Constant
mode = log
active_gases = H2O
log_H2O = -5
#N2 = -6.91
#H2_He = -4.44


[Temperature]
profile_type = Npoint
T_surface = 1500.0
temperature_points = 1000.0,500.0,200.0,40.0
pressure_points = 1e4,1e2,1e0,1e-3
T_top = 20.0

[Pressure]
profile_type = Simple
atm_min_pressure = 1e-4
atm_max_pressure = 1e6
nlayers = 100

[Planet]
planet_type = Simple
planet_mass = 1.0 
planet_radius = 1.0

[Star]
star_type = blackbody

[Model]
model_type = transmission

    [[Absorption]]
    
    [[CIA]]
    cia_pairs = H2-He,H2-H2
    
    [[Mie]]
    mie_path= /Users/ahmed/Documents/repos/TauREx3/src/MIE/MgSiO3.dat

    [[SimpleClouds]]
    clouds_pressure =5e3

[Spectrum]
observed_spectrum = /Users/ahmed/Documents/taurex_files/taurex_cobweb/tests/test_0_transmission/SPECTRUM_fit.dat
grid_type = observed
#wavenumber_grid = 0.0,10000.0,10000
#wavelength_grid = 0.01,10.0,10000




[Optimizer]
optimizer = multinest
num_live_points = 100
max_iterations = 1000
resume=False
verbose_output=True
multi_nest_path = ./multinest



[Fitting]
T:fit = True
T:bounds = 1200.0,1600.0
log_H2O:fit = True
log_H2O:bounds = -2,-5

