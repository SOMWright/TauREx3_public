[Global]
xsec_path = /Users/ahmed/Documents/taurex_files/taurex_cobweb/Input/xsec/TauRex_sampled_xsecs_R10000_0.3-15
cia_path = /Users/ahmed/Documents/taurex_files/taurex_cobweb/Input/cia/hitran


[Chemistry]
chemistry_type = taurex
fill_gases = H2,He
ratio = 4.8962e-2

    [[H2O]]
    gas_type = constant
    mix_ratio=1.1185e-4

    [[N2]]
    gas_type = constant
    mix_ratio = 3.00739e-9

    

[Temperature]
profile_type = isothermal
T = 1997

[Pressure]
profile_type = Simple
atm_min_pressure = 1e-4
atm_max_pressure = 1e6
nlayers = 100

[Planet]
planet_type = Simple
planet_mass = 1.0 
planet_radius = 1.0

[Star]
star_type = blackbody

[Model]
model_type = transmission

    [[Absorption]]
    
    [[CIA]]
    cia_pairs = H2-He,H2-H2
    
    [[Rayleigh]]

    #[[LeeMie]]
    #mie_radius=0.1
    #mie_mix_ratio=1e-5
    #mie_Q=80
    #mie_bottom_pressure=-1
    #mie_top_pressure=1e3



[Binning]
bin_type = manual
accurate = true
log_wavelength_grid = 0.6,4.1,30

[Instrument]
instrument = snr
SNR = 1

[Observation]
taurex_spectrum = self
#observed_spectrum = /Users/ahmed/Documents/taurex_files/taurex_cobweb/tests/test_0_transmission/SPECTRUM_fit.dat
#observed_spectrum = /Users/ahmed/Documents/repos/TauREx3/test_spectrum.dat




[Optimizer]
optimizer = multinest
num_live_points = 50
multi_nest_path=./multinest
search_multi_modes=True



[Fitting]
T:fit = True
T:factor = 0.75,1.25
planet_radius:fit = False
H2O:fit = False
H2O:bounds = 1e-2,1e-5
H2O:mode = log

